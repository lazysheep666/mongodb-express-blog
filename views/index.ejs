<%- include header %>
<% posts.forEach(function (post, index) { %>
    <% var time = post.time.split(" ")[0] + "-" + post.time.split(" ")[1] %>
    <p><h2><a href="/u/<%= post.name %>/<%= time %>/<%= post.title %>"><%= post.title %></a></h2></p>
    <p class="info">
      作者: <a href="/u/<%= post.name %>"><%= post.name %></a> |
      日期: <%= post.time %>
      标签:
      <% post.tags.forEach(function (tag, index) { %>
        <% if (tag) { %>
        <a class="tag" href = "/tags/<%= tag %>"><%= tag %></a>
        <% } %>
      <% }) %>
    </p>
    <p><%- post.post %></p>
    <p class="info">阅读: <%= post.pv %> | 评论: <%= post.comments.length %> </p>
<% }) %>
<%- include paging %>
<%- include footer %>
