<%- include header %>
<% var time = post.time.split(" ")[0] + "-" + post.time.split(" ")[1] %>
<% if (user && (user.name == post.name)) { %>
<p>
  <span><a href="/edit/<%= post.name %>/<%= time %>/<%= post.title %>" class="edit">编辑</a></span>
  <span><a href="/remove/<%= post.name %>/<%= time %>/<%= post.title %>" class="edit">删除</a></span>
</p>
<p class="info">
  作者: <a href="/u/<%= post.name %>"><%= post.name %></a> |
  日期: <%= post.time %>
</p>
<% } %>
<p><%- post.post %></p>
<%- include footer %>
